  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Acesso rápido ao dashboard principal",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Analytics",
      "short_name": "Analytics",
      "description": "Visualizar métricas e análises",
      "url": "/analytics",
      "icons": [
        {
          "src": "/icons/shortcut-analytics.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Multi-Tenant",
      "short_name": "Tenants",
      "description": "Gerenciar múltiplos tenants",
      "url": "/multi-tenant",
      "icons": [
        {
          "src": "/icons/shortcut-tenants.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Integrações",
      "short_name": "Integrations",
      "description": "Configurar integrações externas",
      "url": "/integrations",
      "icons": [
        {
          "src": "/icons/shortcut-integrations.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 320
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "veloflux",
      "url": "/handle?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "config",
          "accept": [".json", ".yaml", ".yml"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/import-config",
      "accept": {
        "application/json": [".json"],
        "application/x-yaml": [".yaml", ".yml"]
      }
    }
  ],
  "capture_links": "existing-client-navigate"
}
